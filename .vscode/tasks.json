{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "cafe_management",
                "main.cpp",
                "MainWindow.cpp",
                "Database.cpp",
                "Employee.cpp",
                "Product.cpp",
                "Menu.cpp",
                "Order.cpp",
                "Table.cpp",
                "Customer.cpp",
                "CafeManagement.cpp",
                "-IC:/Qt/6.7.3/mingw_64/include",
                "-IC:/sqlite-amalgamation-3470000",
                "-LC:/Qt/6.7.3/mingw_64/lib",
                "-lQt6Widgets",
                "-lQt6Core",
                "-lQt6Sql",
                "-lsqlite3"
